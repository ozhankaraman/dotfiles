#!/bin/bash

NC='\033[0m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
BLUE='\033[1;34m'
RED='\033[0;31m'

DOMAINS=("l104.zebrastack.com" "zz.zebrastack.com" "zebrastack.com")

usage() {
    echo -e "${YELLOW}Usage:${NC} rs [user@]<host> [sftp] [-c]"
    echo -e "       Attempts ET/SSH/SFTP connection and optionally cleans known_hosts"
    echo
    echo -e "${YELLOW}Examples:${NC}"
    echo -e "  rs harput              # Connect as root@harput using ET if possible"
    echo -e "  rs pi@harput sftp      # Connect as pi@harput via SFTP"
    echo -e "  rs harput -c           # Clean known_hosts then connect"
    echo -e "  rs harput sftp -c      # Clean known_hosts then SFTP connect"
    echo
}

require_binaries() {
    local mode="$1"
    for bin in dig nc; do
        if ! command -v "$bin" &>/dev/null; then
            echo -e "${RED}Missing required binary: $bin${NC}"
            exit 1
        fi
    done
    if [[ "$mode" != "sftp" ]]; then
        if ! command -v et &>/dev/null; then
            echo -e "${RED}Missing required binary: et${NC}"
            exit 1
        fi
    fi
}

resolve_dns() {
    dig +short "$1" | grep -E '^[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+$' | head -n 1
}

try_domains() {
    local host=$1
    for d in "${DOMAINS[@]}"; do
        ip=$(resolve_dns "${host}.${d}")
        if [[ -n "$ip" ]]; then
            echo "${host}.${d}"
            return 0
        fi
    done
    return 1
}

check_et_port() {
    local ip=$1
    nc -w 8 -z "$ip" 2022 &>/dev/null
    return $?
}

clean_known_host() {
    local fqdn=$1
    local ip=$2

    echo -e "${YELLOW}Cleaning known_hosts entries for ${fqdn} and ${ip}${NC}"

    cp ~/.ssh/known_hosts ~/.ssh/known_hosts.bak 2>/dev/null

    local tmpfile=$(mktemp)

    # Start by removing known unhashed entries (IP and FQDN)
    ssh-keygen -R "$fqdn" >/dev/null 2>&1
    # Disable ip based cleanup
    ssh-keygen -R "$ip" >/dev/null 2>&1

    # Fetch current key(s)
    local keyscan=$(ssh-keyscan -T 5 "$fqdn" 2>/dev/null)
    local keys_to_remove=()

    while IFS= read -r line; do
        key=$(echo "$line" | awk '{print $3}')
        [[ -n "$key" ]] && keys_to_remove+=("$key")
    done <<< "$keyscan"

    # Filter .ssh/known_hosts by removing lines with:
    # - FQDN
    # - IP
    # - key content
    grep -v -F "$fqdn" ~/.ssh/known_hosts | grep -v -F "$ip" > "$tmpfile" || true
    for key in "${keys_to_remove[@]}"; do
        grep -v -F "$key" "$tmpfile" > "${tmpfile}.tmp" && mv "${tmpfile}.tmp" "$tmpfile"
    done

    mv "$tmpfile" ~/.ssh/known_hosts
}

main() {
    if [[ $# -lt 1 ]]; then
        usage
        exit 1
    fi

    input=$1
    shift
    mode="auto"
    clean=false

    while [[ $# -gt 0 ]]; do
        case "$1" in
            sftp)
                mode="sftp"
                ;;
            -c)
                clean=true
                ;;
            *)
                echo -e "${RED}Unknown option: $1${NC}"
                usage
                exit 1
                ;;
        esac
        shift
    done

    require_binaries "$mode"

    if [[ "$input" == *"@"* ]]; then
        username="${input%@*}"
        hostpart="${input#*@}"
    else
        username="root"
        hostpart="$input"
    fi

    if [[ "$hostpart" == *.* ]]; then
        fqdn="$hostpart"
        ip=$(resolve_dns "$fqdn")
        if [[ -z "$ip" ]]; then
            echo -e "${RED}Could not resolve ${fqdn}${NC}"
            exit 2
        fi
    else
        fqdn=$(try_domains "$hostpart") || {
            echo -e "${RED}Could not resolve any domain for ${hostpart}${NC}"
            exit 3
        }
        ip=$(resolve_dns "$fqdn")
    fi

    if [[ "$clean" == true ]]; then
        clean_known_host "$fqdn" "$ip"
    fi

    echo -ne "\033]2;$hostpart\007"

    if [[ "$mode" == "sftp" ]]; then
        echo -e "${GREEN}sftp ${username}@${fqdn}${NC}"
        sftp "${username}@${fqdn}"
    else
        if check_et_port "$ip"; then
            echo -e "${YELLOW}et ${username}@${fqdn}${NC}"
            et "${username}@${fqdn}"
        else
            echo -e "${BLUE}ssh ${username}@${fqdn}${NC}"
            ssh "${username}@${fqdn}"
        fi
    fi

    echo -ne "\033]2;$(hostname -s)\007"
}

main "$@"
