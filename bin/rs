#!/bin/bash

#Renkler
#Black       0;30     Dark Gray     1;30
#Blue        0;34     Light Blue    1;34
#Green       0;32     Light Green   1;32
#Cyan        0;36     Light Cyan    1;36
#Red         0;31     Light Red     1;31
#Purple      0;35     Light Purple  1;35
#Brown       0;33     Yellow        1;33
#Light Gray  0;37     White         1;37


NC='\033[0m' # No Color
YELLOW='\033[1;33m'
color=$NC

if test -z $1
then
    echo
    echo '\033[1;35m'"Usage: ./rs kvmxx${NC}"
    echo
    exit
fi

host=$1
if test ".$2." == ".z." -o ".$2." == ".."
then
    username="root"
    domain="zz.zebrastack.com"
    # host="`echo $1|cut -d@ -f2`.$domain"
    color='\033[1;34m'
elif test ".$2." == ".c."
then
    #CloudEOS
    domain="labsa.cloudeos.com"
    color='\033[0;31m'
    #host="`echo $1|cut -d@ -f2`.$domain"
    username="root"
fi


if test ".$1." == ".blinkt."
then
    color='\033[1;33m'
    username=pi
    # host=192.168.6.1
    host=192.168.6.3
    unset domain

elif test ".$1." == ".hamsi." -o ".$1." == ".hamsibot."
then
    color='\033[0;33m'
    username=pi
    host=192.168.1.229
    unset domain
elif test ".$1." == ".s3m1." -o ".$1." == ".s3n1."
then
    color='\033[0;34m'
    username=pi

elif test ".$1." == ".pi4."
then
    color='\033[0;32m'
    username=pi
    host=192.168.8.4
    unset domain
elif test ".$1." == ".pi8."
then
    color='\033[0;32m'
    username="pi"
    host=192.168.7.8
    unset domain
elif test ".$1." == ".pi9."
then
    unset domain
    color='\033[0;36m'
    username="pi"
    host="192.168.7.9"
elif test ".$1." == ".london."
then
    unset domain
    username="root"
    host="london.zebrastack.com"
elif test ".$1." == ".london2."
then
    unset domain
    username="root"
    host="london2.zebrastack.com"
elif test ".$1." == ".k4."
then
    username="root"
    host="k4m1"
elif test ".$1." == ".k5."
then
    username="root"
    host="k5m1"
elif test ".$1." == ".k6."
then
    username="root"
    host="k6m1"
elif test ".$1." == ".t1."
then
    username="root"
    host="t1m1"
elif test ".$1." == ".t2."
then
    username="root"
    host="t2m1"
elif test ".$1." == ".j1."
then
    username="root"
    host="j1m1"
elif test ".$1." == ".j2."
then
    username="root"
    host="j2m1"
elif test ".$1." == ".s1."
then
    username="root"
    host="s1m1"
elif test ".$1." == ".s2."
then
    username="root"
    host="s2m1"
elif test ".$1." == ".q1."
then
    username="root"
    host="q1m1"
elif test ".$1." == ".q2."
then
    username="root"
    host="q2m1"
elif test ".$1." == ".w1."
then
    username="root"
    host="w1m1"
elif test ".$1." == ".w2."
then
    username="root"
    host="w2m1"
elif test ".$1." == ".a1."
then
    username="root"
    host="a1m1"
elif test ".$1." == ".e1."
then
    username="root"
    host="e1m1"
elif test ".$1." == ".e2."
then
    username="root"
    host="e2m1"
elif test ".$1." == ".c1."
then
    username="root"
    host="c1m1"
elif test ".$1." == ".c2."
then
    username="root"
    host="c2m1"
elif test ".$1." == ".c3."
then
    username="root"
    host="c3m1"
elif test ".$1." == ".h1."
then
    username="root"
    host="h1m1"
elif test ".$1." == ".h2."
then
    username="root"
    host="h2m1"
elif test ".$1." == ".h3."
then
    username="root"
    host="h3m1"
elif test ".$1." == ".k0."
then
    username="root"
    host="k0m1"
elif test ".$1." == ".d1."
then
    username="root"
    host="d1m1"
fi

# Domain varsa ekleyelim
if !( test -z $domain )
then
    host2=$host.$domain
else
    host2=$host
fi

# kullanici varsa onu ekleyelim
if !( [ -z $username ] ); then
  username="${username}@"
fi

#custom port olayini sonra dusun
#if !( test -z $port )
#then
#    baglanti="$baglanti -p $port"
#fi

nc -G 6 -z $host2 2022 1>/dev/null 2>/dev/null
if [ $? -eq 0 ]; then
  if test -z $TMUX; then
    export DISABLE_AUTO_TITLE="true"
    echo -n -e "\033]0;$host\007"
    # $HOME/bin/ssh_color.py $host
    $HOME/bin/ssh_color.py $1
  else
    # tmux rename-window $host
    tmux rename-window $1
  fi
  echo -e "${YELLOW}et $username$host2${NC}"
  echo
  et $username$host2
  if test -z $TMUX; then
    export DISABLE_AUTO_TITLE="false"
    echo -n -e "\033]6;1;bg;*;default\a"
  else
    tmux rename-window zsh
  fi  
else
  echo -e "${color}ssh $username$host2${NC}"
  echo
  ssh $username$host2
fi

#echo -e "${color}ssh $baglanti${NC}"
#echo

